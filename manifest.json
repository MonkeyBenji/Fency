{
  "manifest_version": 2,
  "name": "Fency",
  "version": "0.1.3.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "fency@inwork.nl",
      "update_url": "https://fency.inwork.nl/updates.json"
    }
  },

  "description": "Hack the Web: For Fun and Profit",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "256": "icons/icon256.png"
  },

  "web_accessible_resources": ["lib/*", "icons/*"],

  "permissions": ["<all_urls>", "webNavigation", "storage", "contextMenus", "unlimitedStorage"],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "256": "icons/icon256.png"
    },
    "default_title": "Fency",
    "default_popup": "popup/index.html",
    "browser_style": true
  },

  "background": {
    "scripts": ["browser-polyfill.js", "content-scripts-register-polyfill.js", "background.js"]
  }
}
