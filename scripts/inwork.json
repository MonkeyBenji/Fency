{
  "version": "0.0.0.1",
  "scripts": {
    "InWork": [
      {
        "id": "vaca-shortcuts",
        "type": "script",
        "version": "0.1",
        "name": "InWork Vacature Connexys Link",
        "description": "Maakt van vacature titels hieperlinks naar het Connexys object",
        "matches": ["https://inwork.nl/*", "https://www.inwork.nl/*"],
        "path": "inwork/vaca-shortcuts.js",
        "enabled": true
      }
    ],
    "Connexys": [
      {
        "id": "geo-col",
        "type": "script",
        "version": "0.1",
        "name": "Geo Coordinaten Kolom",
        "description": "Snelle methode om in een Salesforce rapport een kolom toe te voegen met de afstand tot een bepaalde locatie",
        "matches": "https://inwork.lightning.force.com/reports/lightningReportApp.app*",
        "path": "connexys/geo-col.js",
        "enabled": true,
        "allFrames": true
      },
      {
        "id": "dash-autorefresh",
        "type": "script",
        "version": "0.1",
        "name": "Dashboard Auto-refresh",
        "description": "Automatically refresh dashboards when Salesforce warns they're old",
        "matches": ["https://inwork.lightning.force.com/desktopDashboards/*"],
        "path": "connexys/dash-autorefresh.js",
        "enabled": true,
        "allFrames": true
      },
      {
        "id": "matching-customers",
        "type": "script",
        "version": "0.1",
        "name": "Matchende klanten zoekert",
        "description": "Maak vanuit een kandidaat, automagisch een rapport van klanten op basis van Geo/BU/Functie",
        "matches": ["https://inwork.lightning.force.com/*"],
        "path": "connexys/matching-customers.js",
        "enabled": true,
        "allFrames": true
      },
      {
        "id": "add-to-vacancy",
        "type": "script",
        "version": "0.1",
        "name": "Snellere recr. inschrijving",
        "description": "Voeg een kandidaat toe aan je recente vacature vanuit een FAB menu'tje bij de kandidaat",
        "matches": ["https://inwork.lightning.force.com/*"],
        "path": "connexys/add-to-vacancy.js",
        "enabled": true,
        "allFrames": true
      },
      {
        "id": "cv-generator-sort",
        "type": "script",
        "version": "0.1",
        "name": "CV Generator Sorteerding",
        "description": "TODO: Deprecaten na release 30",
        "matches": ["https://inwork.lightning.force.com/one/*"],
        "path": "connexys/cv-generator-sort.js",
        "enabled": true
      },
      {
        "id": "cv-generator-style",
        "type": "script",
        "version": "0.1",
        "name": "CV Generator Style",
        "description": "Wat minder verticale space gebruiken",
        "matches": ["https://inwork.lightning.force.com/one/*"],
        "path": "connexys/cv-generator-style.js",
        "enabled": true
      },
      {
        "id": "cv-generator-textdates",
        "type": "script",
        "version": "0.1",
        "name": "CV Generator Text in Date Fields",
        "description": "Kut Connexys updates ook",
        "matches": ["https://inwork.lightning.force.com/one/*"],
        "path": "connexys/cv-generator-textdates.js",
        "enabled": true
      },
      {
        "id": "step-style",
        "type": "script",
        "version": "0.1",
        "name": "Step styling",
        "description": "Zet wat veldjes naast elkaar voor betere UI",
        "matches": ["https://inwork.lightning.force.com/*"],
        "path": "connexys/step-style.js",
        "enabled": true
      }
    ]
  },
  "Misc": [
    {
      "id": "directlease-contract-kevin",
      "type": "script",
      "version": "0.1",
      "name": "DirectLease Contract Kevin",
      "description": "Set contract settings to Kevin preferences automagically",
      "matches": "https://directlease.nl/leasen/*",
      "path": "misc/directlease-contract-kevin.js",
      "enabled": false
    }
  ]
}
